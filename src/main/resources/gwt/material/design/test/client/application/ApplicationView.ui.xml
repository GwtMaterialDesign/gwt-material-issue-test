<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:m="urn:import:gwt.material.design.client.ui"
        xmlns:ma="urn:import:gwt.material.design.addins.client">

    <ui:with field="res" type="gwt.material.design.test.client.resources.AppResources"/>

    <m:MaterialPanel>
        <m:MaterialHeader>
            <m:MaterialNavBar activates="sidenav">
                <m:MaterialNavBrand paddingLeft="60" text="App" />
                <m:MaterialNavSection float="RIGHT">
                    <m:MaterialLink text="Link 1"/>
                    <m:MaterialLink iconType="POLYMER" />
                </m:MaterialNavSection>
            </m:MaterialNavBar>
            <m:MaterialSideNav m:id="sidenav" type="PUSH" alwaysShowActivator="true" width="280">
                <m:MaterialLink text="Link 1" iconType="POLYMER"/>
                <m:MaterialLink text="Link 2" iconType="POLYMER"/>
                <m:MaterialLink text="Link 3" iconType="POLYMER"/>
            </m:MaterialSideNav>
        </m:MaterialHeader>

        <m:MaterialContainer padding="40">
            <m:MaterialTitle title="Issue #591" description="MaterialWindow is not taking color overrides. #591" />
            <ma:window.MaterialWindow ui:field="window" toolbarColor="PINK" backgroundColor="AMBER" title="Sample Window" height="500px">
                <m:MaterialTitle textAlign="CENTER" padding="20" title="Test Window" description="Improved Window maximize animation and fixed height issue on maximize" />
            </ma:window.MaterialWindow>
        </m:MaterialContainer>

    </m:MaterialPanel>
</ui:UiBinder>
