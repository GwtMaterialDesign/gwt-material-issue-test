<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client">

    <ui:with field="res" type="gwt.material.design.test.client.resources.AppResources"/>
    <ui:style gss="true">
        body {
            overflow: auto !important;
        }
        @external active;
        ul.sidenav li.active a i {
            color: #2196f3 !important;
        }

        .anim, ul.sidenav img {
            transition: 0.4s all;
            -webkit-transition: 0.4s all;
            -moz-transition: 0.4s all;
        }
    </ui:style>
    <m:MaterialPanel>
        <m:MaterialHeader ui:field="header">
            <m:MaterialNavBar activates="sidenav">
                <m:MaterialNavBrand paddingLeft="60" text="App" />

                <m:MaterialNavSection float="RIGHT" hideOn="NONE">
                    <m:MaterialNavMenu iconType="MENU" activates="sidenavRight" />
                </m:MaterialNavSection>

            </m:MaterialNavBar>
            <m:MaterialSideNav m:id="sidenav" addStyleNames="{style.sidenav}" ui:field="sideNav" expandOnClick="true" type="MINI_WITH_EXPAND" allowBodyScroll="true" closeOnClick="false" width="280">
                <ma:sideprofile.MaterialSideProfile ui:field="sideProfile" height="64" addStyleNames="{style.anim}">
                    <m:MaterialImage ui:field="image" width="32px" height="32px" url="http://b.vimeocdn.com/ps/339/488/3394886_300.jpg" />
                    <m:MaterialPanel ui:field="namePanel" visible="false">
                        <m:MaterialLabel ui:field="name" text="GWT Material" textColor="BLACK"/>
                        <m:MaterialLink ui:field="email" text="gwt-material@gmail.com" activates="dropProfile" textColor="GREY"/>
                    </m:MaterialPanel>
                </ma:sideprofile.MaterialSideProfile>
                <m:MaterialLink iconType="INBOX" text="Inbox">
                    <m:MaterialBadge text="1 new" />
                </m:MaterialLink>
                <m:MaterialLink iconType="STAR" text="Starred"/>
                <m:MaterialLink iconType="SEND" text="Send Mail"/>
                <m:MaterialLink iconType="DRAFTS" text="Drafts"/>
                <m:MaterialLink iconType="MAIL" text="All Mail"/>
                <m:MaterialLink iconType="DELETE" text="Trash"/>
                <m:MaterialLink iconType="INFO_OUTLINE" text="Spam"/>
            </m:MaterialSideNav>

            <m:MaterialSideNav m:id="sidenavRight" ui:field="sideNavRight" type="MINI_WITH_EXPAND" allowBodyScroll="true" edge="RIGHT" alwaysShowActivator="true" width="280">
                <m:MaterialLink iconType="INBOX" text="Inbox"/>
                <m:MaterialLink iconType="STAR" text="Starred"/>
                <m:MaterialLink iconType="SEND" text="Send Mail"/>
                <m:MaterialLink iconType="DRAFTS" text="Drafts"/>
                <m:MaterialLink iconType="MAIL" text="All Mail"/>
                <m:MaterialLink iconType="DELETE" text="Trash"/>
                <m:MaterialLink iconType="INFO_OUTLINE" text="Spam"/>
            </m:MaterialSideNav>
        </m:MaterialHeader>

        <m:MaterialContainer height="1800px">
            <m:MaterialRow padding="40">
                <m:MaterialTitle title="MINI_WITH_EXPAND" description="Provides a sidenav with mini variant sidenav and provides a expand feature" />
            </m:MaterialRow>
        </m:MaterialContainer>

        <m:MaterialFooter backgroundColor="BLUE" type="FIXED">
            <m:MaterialFooterCopyright>
                <m:MaterialLabel text="Â© 2015 Copyright GWT Material" />
            </m:MaterialFooterCopyright>
        </m:MaterialFooter>
    </m:MaterialPanel>
</ui:UiBinder>
